                <?php
                // End a row
                if ($i % 3 == 2) {
                    $row_closed = true;
                ?>
        </div>
                <?php
                }

                $i++;
            }

            // Add closing div if the last row has not been closed
            if (!$row_closed) {
            ?>
        </div>
            <?php
            }
            ?>
        <?php
        }
        ?>

