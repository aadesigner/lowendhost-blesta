                            $formatted_option_price = $this->CurrencyFormat->format((isset($option->option_pricing_price_renews) ? $option->option_pricing_price_renews : $option->option_pricing_price), (isset($option->option_pricing_currency) ? $option->option_pricing_currency : null));
