                'icon' => 'fas fa-random fa-fw',
                'button' => 'btn-light',
                'lang' => 'ClientServices.manage.button_change_service_package',
                'link' => $this->base_uri . 'services/upgrade/' . (isset($service->id) ? $service->id : null)
            ],
            'change_service_term' => [
                'enabled' => ((isset($client_change_service_term) ? $client_change_service_term : null) && !empty($alternate_service_terms) && (isset($service->status) ? $service->status : null) == 'active' && empty($service->date_canceled) && !(isset($queued_service_change) ? $queued_service_change : null)),
                'icon' => 'fas fa-edit fa-fw',
                'button' => 'btn-light',
                'lang' => 'ClientServices.manage.button_change_service_term',
                'link' => $this->base_uri . 'services/changeterm/' . (isset($service->id) ? $service->id : null)
            ],
            'cancel_service' => [
                'enabled' => ((isset($client_cancel_service) ? $client_cancel_service : null) && !in_array((isset($service->status) ? $service->status : null), ['canceled', 'suspended'])),
