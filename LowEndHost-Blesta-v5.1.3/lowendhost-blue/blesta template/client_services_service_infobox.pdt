                    foreach ($service->options as $option) {
                        $is_user_defined_value = (in_array((isset($option->option_type) ? $option->option_type : null), ['text', 'textarea', 'password']));
                        $display_name = ($is_user_defined_value ? (isset($option->value) ? $option->value : null) : (isset($option->option_value_name) ? $option->option_value_name : null));
